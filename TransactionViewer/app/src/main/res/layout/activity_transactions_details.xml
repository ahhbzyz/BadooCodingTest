<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_transaction_details"
    tools:context="com.badoo.test.transactionviewer.activities.TransactionsDetailsActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:background="@color/colorPrimary" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_total"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_primary"
        android:textStyle="normal|bold"
        android:paddingLeft="@dimen/text_pading_left_twoline_list"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="?attr/colorButtonNormal" />

    <ListView
        android:id="@+id/lv_transactions_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
